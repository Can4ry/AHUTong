<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="com.ahu.ahutong.data.model.NewsType"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/gray"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/bt_radios"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">
            <RadioButton
                android:id="@+id/rd_college"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textSize="12sp"
                android:textColor="@color/discovery_radio_tc"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/discovery_radio_background"
                android:button="@null"
                android:checked="true"
                android:text="@{NewsType.College.value}" />
            <RadioButton
                android:textColor="@color/discovery_radio_tc"
                android:layout_height="25dp"
                android:textSize="12sp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/discovery_radio_background"
                android:button="@null"
                android:layout_width="wrap_content"
                android:id="@+id/rd_edu"
                android:text="@{NewsType.Edu.value}"/>
            <RadioButton
                android:textColor="@color/discovery_radio_tc"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp"
                android:textSize="12sp"
                android:background="@drawable/discovery_radio_background"
                android:button="@null"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/rd_association"
                android:text="@{NewsType.Association.value}"/>
            <RadioButton
                android:textColor="@color/discovery_radio_tc"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp"
                android:textSize="12sp"
                android:background="@drawable/discovery_radio_background"
                android:button="@null"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/rd_recruit"
                android:text="@{NewsType.Recruit.value}"/>
        </RadioGroup>
    </LinearLayout>

</layout>