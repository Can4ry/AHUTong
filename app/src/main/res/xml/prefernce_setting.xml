<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="主题">
        <Preference
            app:iconSpaceReserved="false"
            app:key="change_theme"
            app:title="@string/setting_change_theme" />
        <Preference
            app:iconSpaceReserved="false"
            app:key="diy_theme"
            app:title="@string/setting_diy_theme" />
    </PreferenceCategory>


    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="课表">

        <SwitchPreference
            app:iconSpaceReserved="false"
            app:key="show_all"
            app:title="@string/setting_show_all" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="其他">
        <Preference
            app:iconSpaceReserved="false"
            app:key="license"
            app:title="@string/license" />
        <Preference
            app:iconSpaceReserved="false"
            app:key="clear"
            app:title="@string/setting_clear" />
    </PreferenceCategory>

</PreferenceScreen>